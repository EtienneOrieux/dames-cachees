<!doctype html>
<html>
  <head>
    <%- include ('../partials/head') %>
    <link rel="stylesheet" href="css/index.css">
  </head>
  <body>
    <header>
      <%- include ('../partials/header') %>
    </header>
    <div class="parent">
      <div id="intro">
        <div class="info-box">
          <h2 class="text-center" data-i18n="index.welcome"></h2>
          <p data-i18n="index.intro"></p>
          <!-- <a href="/rules">
            <button class="my-btn" data-i18n="index.learn"></button>
          </a> -->
        </div>
        <div class="info-box">
          <h2 class="text-center" data-i18n="index.leaderboard"></h2>
          <p>
            <table id="leaderboard">
            <% for (var i = 0; i < leaderboard.length; i++) { %>
              <tr>
                <td><%= leaderboard[i].username %></td>
                <td>
                  <% if (leaderboard[i].rating) { %>
                    <%= Math.round(leaderboard[i].rating.elo, 0) %>
                  <% } %>
                </td>
              </tr>
            <% } %>
            </table>
          </p>
        </div>
      </div>
      <img id="chess-position" src="img/hq-chess/scandi.png" alt="#teamScandi">
    </div>

    <%- include ('../partials/scripts') %>
    <footer>
      <%- include ('../partials/footer') %>
    </footer>
  </body>

</html>
