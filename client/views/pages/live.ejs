<!doctype html>
<html>
  <head>
    <%- include ('../partials/head') %>
    <link rel="stylesheet" type="text/css" href="css/live.css">
    <link rel="stylesheet" type="text/css" href="css/chessboard.min.css">

    <script src="lib/myChessboard.js"></script>
    <script src="lib/myChess.js"></script>
  </head>

  <body>
    <header>
      <%- include ('../partials/header') %>
    </header>
    <div class="parent">
      <div id="chat">
        <div id="chat-box">
          <ul id="chat-history"></ul>
        </div>
        <textarea id="chat-input"></textarea>
      </div>

      <div id="main-content">
        <div id="login">
          <h2 id="login-title"></h2>
          <input id="login-input"/>
        </div>
        <div id="waitingRoom" hidden>
          <h2 id="waitingRoom-title"></h2>
          <div id="playerList">
             <button class="player prototype btn btn-primary" id="player-prototype"</button>
          </div>
        </div>
        <div id="board"></div>
      </div>

      <div id="side-content">
        <div id="opponent-name"></div>
        <div id="buttons">
          <button class="live-button" id="rematch-btn" hidden></button>
          <button class="live-button" id="draw-btn" hidden></button>
          <button class="live-button" id="resign-btn" hidden></button>
        </div>
        <div id="player-name"></div>
      </div>
    </div>

    <%- include ('../partials/scripts') %>
    <script type="text/javascript">
      // chat
      var $chatHistory = $('#chat-history')
      var $chatBox = $('#chat-box')
      var $msgInput = $("#chat-input");

      // main-content
      var $login = $("#login");
      var $loginTitle = $('#login-title');
      var $loginInput = $("#login-input");
      var $waitingRoom = $("#waitingRoom");
      var $playerList = $("#playerList");
      var $playerPrototype = $("#player-prototype");

      //side-content
      var $opponentName = $('#opponent-name');
      var $rematchBtn = $('#rematch-btn');
      var $resingBtn = $('#resign-btn');
      var $drawBtn = $('#draw-btn');
      var $playerName = $('#player-name');
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="commons/constants.js"></script>
    <script src="commons/GameState.js"></script>
    <script src="js/Chatbox.js"></script>
    <script src="js/Player.js"></script>
    <script src="js/AbstractBoard.js"></script>
    <script src="js/SelectHqBoard.js"></script>
    <script src="js/PlayingBoard.js"></script>
    <script src="js/client.js"></script>
  </body>
</html>
